extends layout

block content
  h1 Emails 

  h2 Formato email
  textarea
    each item in emails
      = item.displayName +' <'+ item.email +'>, '


  h2 Tabela
  table
    tr
      th(style='border:1px solid #000') #
      th(style='border:1px solid #000') Nome
      th(style='border:1px solid #000') Email
    each item in emails
      tr
        td(style='border:1px solid #000')= item.index
        td(style='border:1px solid #000')= item.displayName
        td(style='border:1px solid #000')= item.email
